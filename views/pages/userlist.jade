extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th Name
						th CreateTime
						th show
						th update
						th delete
				tbody
					each item in users
						tr(class="item-id-#{item._id}")
							td #{item.name}
							td #{moment(item.meta.creatAt).format('MM/DD/YYYY')}
							td: a(target="_blank", href="../movie/#{item._id}") chakan
							td: a(target="_blank", href="../admin/update/#{item._id}") update
							td
								button.btn.btn-danger.del(type="button", data-id="#{item._id}") delete

	script(src="/js/userAdmin.js")


