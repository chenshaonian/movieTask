extends ../layout

block content
	.container
		.row
			each item in movies
				.col-md-7
					embed(src="#{movie.flash}", allowFullScreen="true", quality="high", width="720", height="600", align="middle", type="application/x-shockwave-flash")
				.col-md-5
					dl.dl-horizontal
						dt movieName
						dd= movie.title
						dt director
						dd= movie.director
						dt country
						dd= movie.country
						dt language
						dd= movie.language
						dt year
						dd= movie.year
						dt summary
						dd= movie.summary
